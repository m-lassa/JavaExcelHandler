<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vBox" alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.excelmetadata.excelhandler.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Button onAction="#openFile" text="Choose File" />

    <Label fx:id="backUpDirectoryText" text="Or manually enter file directory" />

    <TextField fx:id="filePathTextField" />

    <Label fx:id="backUpFileText" text="Enter original Excel file name, including extension. Supported extensions: .xlsx, .xls" />

    <TextField fx:id="fileNameTextField" />

    <Label text="A back up is recommended." />

    <Button onAction="#backUpSelected" text="Back Up File" />

    <Button onAction="#viewMetadata" text="Display Excel Metadata" />

    <Label text="Remove Excel Worksheet/Workbook protection.&#10;Note: this won't work if the file itself is protected." />

    <Button onAction="#removePassword" text="Remove Spreadsheet Protection" />

</VBox>
